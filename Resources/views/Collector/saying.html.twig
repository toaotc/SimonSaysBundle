{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <span>
            <img width="22" height="28" alt="Simon" src="data:image/png;base64," />
            <span class="sf-toolbar-status sf-toolbar-info-piece-additional">{{ collector.saying|trans({}, 'ToaSimonSays' ~ collector.catalogue) }}</span>
        </span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>{{ 'Simon says'|trans({}, 'ToaSimonSays') }}</b>
            {{ collector.saying|trans({}, 'ToaSimonSays' ~ collector.catalogue) }}
        </div>
        <div class="sf-toolbar-info-piece">
            <b></b>
            <span>
                Skull icon by<br />
                <a href="http://glyphicons.com/" target="_blank">GLYPHICONS.com</a><br />
                <a rel="license" href="http://creativecommons.org/licenses/by/3.0/" target="_blank"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by/3.0/80x15.png" /></a>
            </span>
        </div>
    {% endset %}

    {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': false } %}
{% endblock %}
